{
    "name": "clarkwinkelmann/flarum-ext-discussion-bookmarks",
    "description": "Bookmark discussions to find them easily later",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.3.1",
        "ext-json": "*"
    },
    "replace": {
        "clarkwinkelmann/flarum-ext-bookmarks": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-discussion-bookmarks",
        "forum": "https://discuss.flarum.org/d/25357"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\DiscussionBookmarks\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Discussion Bookmarks",
            "category": "feature",
            "icon": {
                "name": "fas fa-bookmark",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "v17development/flarum-blog"
            ]
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/25357"
        }
    }
}
